<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CardQuizAndReviews" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="TitleStyleMainScreen" parent="Widget.AppCompat.TextView">
        <item name="textAllCaps">true</item>
        <item name="fontFamily">@font/opensansbold</item>
        <item name="android:textColor">@color/blue_200</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="SlotNameStyle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/opensansregular</item>
        <item name="android:textColor">@color/blue_1000</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="RatingSlotText" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/opensansregular</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CountPB" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/opens</item>
        <item name="android:textColor">@color/blue_200</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="MyRatingBar"  parent="android:style/Widget.Material.RatingBar.Indicator">
        <item name="colorControlNormal">#686868</item>
        <item name="colorControlActivated">#ffdd00</item>
    </style>

    <style name="prevButton" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/RedButtonThemeOverlay</item>
    </style>
    <style name="RedButtonThemeOverlay">
        <item name="colorPrimary">@color/blue_200</item>
    </style>
</resources>